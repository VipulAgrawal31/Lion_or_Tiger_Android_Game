<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#73EBDD"
    tools:context=".MainActivity">


    <androidx.gridlayout.widget.GridLayout
        android:id="@+id/gridlayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#FBD107"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.457">

        <ImageView
            android:id="@+id/img1"
            android:layout_width="105dp"
            android:layout_height="104dp"
            android:layout_margin="5dp"
            android:alpha="0.03"
            android:background="#314A4F"
            android:onClick="imageViewTapped"
            android:padding="5dp"
            android:tag="8"
            app:layout_column="3"
            app:layout_row="2"
            app:srcCompat="@drawable/lion"
            tools:ignore="OnClick" />

        <ImageView
            android:id="@+id/img2"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_margin="5dp"
            android:alpha="0.03"
            android:background="#314A4F"
            android:onClick="imageViewTapped"
            android:padding="5dp"
            android:tag="5"
            app:layout_column="3"
            app:layout_row="1"
            app:srcCompat="@drawable/lion"
            tools:ignore="OnClick" />

        <ImageView
            android:id="@+id/img3"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_margin="5dp"
            android:alpha="0.03"
            android:background="#314A4F"
            android:onClick="imageViewTapped"
            android:padding="5dp"
            android:tag="4"
            app:layout_column="2"
            app:layout_row="1"
            app:srcCompat="@drawable/lion"
            tools:ignore="OnClick" />

        <ImageView
            android:id="@+id/img4"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_margin="5dp"
            android:alpha="0.03"
            android:background="#314A4F"
            android:onClick="imageViewTapped"
            android:padding="5dp"
            android:tag="3"
            app:layout_column="1"
            app:layout_row="1"
            app:srcCompat="@drawable/lion"
            tools:ignore="OnClick" />

        <ImageView
            android:id="@+id/img5"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_margin="5dp"
            android:alpha="0.03"
            android:background="#314A4F"
            android:onClick="imageViewTapped"
            android:padding="5dp"
            android:tag="7"
            app:layout_column="2"
            app:layout_row="2"
            app:srcCompat="@drawable/lion"
            tools:ignore="OnClick" />

        <ImageView
            android:id="@+id/img51"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_margin="5dp"
            android:alpha="0.03"
            android:background="#314A4F"
            android:onClick="imageViewTapped"
            android:padding="5dp"
            android:tag="6"
            app:layout_column="1"
            app:layout_row="2"
            app:srcCompat="@drawable/lion"
            tools:ignore="OnClick" />

        <ImageView
            android:id="@+id/img7"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_margin="5dp"
            android:alpha="0.03"
            android:background="#314A4F"
            android:onClick="imageViewTapped"
            android:padding="5dp"
            android:tag="1"
            app:layout_column="2"
            app:layout_row="0"
            app:srcCompat="@drawable/lion"
            tools:ignore="OnClick" />

        <ImageView
            android:id="@+id/img8"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_margin="5dp"
            android:alpha="0.03"
            android:background="#314A4F"
            android:onClick="imageViewTapped"
            android:padding="5dp"
            android:tag="0"
            app:layout_column="1"
            app:layout_row="0"
            app:srcCompat="@drawable/lion"
            tools:ignore="OnClick" />

        <ImageView
            android:id="@+id/img6"
            android:layout_width="99dp"
            android:layout_height="95dp"
            android:layout_margin="5dp"
            android:alpha="0.03"
            android:background="#314A4F"
            android:onClick="imageViewTapped"
            android:padding="5dp"
            android:tag="2"
            app:layout_column="3"
            app:layout_row="0"
            app:srcCompat="@drawable/lion"
            tools:ignore="OnClick" />

    </androidx.gridlayout.widget.GridLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Lion or Tiger ?"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.541"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>